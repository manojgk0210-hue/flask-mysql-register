pipeline {
    agent any

    stages {

        stage('Build & Deploy') {
            steps {
                sh '''
                # Clean workspace
                rm -rf flask-mysql-register

                # Repo already checked out by Jenkins, so just move
                cd ${WORKSPACE}

                # Start containers
                docker compose up -d --build

                # Wait for MySQL
                sleep 20

                # Run DB commands (non-interactive)
                docker exec flask-mysql-register_mysql_1 \
                mysql -u root -prootpassword -e "
                CREATE DATABASE IF NOT EXISTS userdb;
                USE userdb;
                CREATE TABLE IF NOT EXISTS users (
                    id INT AUTO_INCREMENT PRIMARY KEY,
                    username VARCHAR(100),
                    email VARCHAR(100),
                    password VARCHAR(100)
                );
                "
                '''
            }
        }

        stage('Test') {
            steps {
                sh 'docker ps'
            }
        }

        stage('Deliver') {
            steps {
                echo 'Deployment completed successfully ðŸš€'
            }
        }
    }
}
