pipeline {
    agent any

    triggers {
        pollSCM('* * * * *')
    }

    stages {

        stage('Build & Deploy') {
            steps {
                sh '''
                echo "Starting Docker Compose..."
                docker compose down || true
                docker compose up -d --build

                echo "Waiting for MySQL to be ready..."
                for i in {1..30}; do
                  docker compose exec -T mysql mysqladmin ping -u root -prootpassword --silent && break
                  sleep 2
                done

                echo "Initializing database..."
                docker compose exec -T mysql mysql -u root -prootpassword <<EOF
                CREATE DATABASE IF NOT EXISTS userdb;
                USE userdb;
                CREATE TABLE IF NOT EXISTS users (
                    id INT AUTO_INCREMENT PRIMARY KEY,
                    username VARCHAR(100),
                    email VARCHAR(100),
                    password VARCHAR(100)
                );
                EOF
                '''
            }
        }

        stage('Test') {
            steps {
                sh '''
                docker compose ps
                docker ps
                '''
            }
        }

        stage('Deliver') {
            steps {
                echo 'âœ… Flask-MySQL application deployed successfully ðŸš€'
            }
        }
    }
}
