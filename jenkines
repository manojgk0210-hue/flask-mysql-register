pipeline {
    agent any

    triggers {
        pollSCM('* * * * *')
    }

    stages {

        stage('Build & Deploy') {
            steps {
                sh '''
                echo "Starting containers..."
                docker compose down || true
                docker compose up -d --build

                echo "Waiting for MySQL to be ready..."
                
                '''
            }
        }

        stage('Test') {
            steps {
                sh '''
                docker compose ps
                docker ps
                '''
            }
        }

        stage('Deliver') {
            steps {
                echo 'âœ… Flask-MySQL application deployed successfully ðŸš€'
            }
        }
    }
}
