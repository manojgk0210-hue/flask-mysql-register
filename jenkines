pipeline {
    agent any

    triggers {
        pollSCM('* * * * *')
    }

    stages {

        stage('Build & Deploy') {
            steps {
                sh '''
                # Clean old repo if exists
            

                # Clone repo
                git clone https://github.com/manojgk0210-hue/flask-mysql-register.git
                cd flask-mysql-register

                # Start containers
                docker-compose up -d --build

                # Wait for MySQL to start
                sleep 20

                # Execute MySQL commands (NON-interactive)
                docker exec flask-mysql-register_mysql_1 \
                mysql -u root -prootpassword -e "
                CREATE DATABASE IF NOT EXISTS userdb;
                USE userdb;
                CREATE TABLE IF NOT EXISTS users (
                    id INT AUTO_INCREMENT PRIMARY KEY,
                    username VARCHAR(100),
                    email VARCHAR(100),
                    password VARCHAR(100)
                );
                "
                '''
            }
        }

        stage('Test') {
            steps {
                sh '''
                docker ps
                '''
            }
        }

        stage('Deliver') {
            steps {
                echo 'Application deployed successfully ðŸš€'
            }
        }
    }
}
